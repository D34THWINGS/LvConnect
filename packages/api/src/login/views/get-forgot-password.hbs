<form method="post" action="/forgot-password" class="mdl-card mdl-shadow--2dp login-card">
  <div class="mdl-card__title">Forgot password</div>
  {{#if success}}
    <div class="mdl-card__supporting-text mdl-card--border login-card__body">
      <div class="login-card__success">
        <i class="material-icons">check_circle</i> Email was successfully sent. Don't forget to check your Spam folder.
      </div>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/login">
        Back to login
      </a>
    </div>
  {{else}}
    <div class="mdl-card__supporting-text mdl-card--border login-card__body">
      <div class="login-card__text">The password reset instructions will be sent by email.</div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="email" id="email" name="email" value="{{email}}" required>
        <label class="mdl-textfield__label" for="email">Email</label>
      </div>
      {{#if error}}<div class="login-card__error"><i class="material-icons">error</i> {{error}}</div>{{/if}}
      <input type="hidden" name="crumb" value="{{crumb}}">
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit">
        Send me an email
      </button>
    </div>
  {{/if}}
</form>
