<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h3>Applications</h3>
  </div>
</div>

<div class="mdl-grid">
  {{#each apps}}
  <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">{{this.name}}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <p class="block-with-text">{{breaklines this.description}}</p>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/dashboard/apps/edit/{{ this._id }}">
        Edit
      </a>
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/dashboard/apps/delete/{{ this._id }}" onclick="return confirm('Are you sure you want to delete this application ?');">
        Delete
      </a>
    </div>
  </div>
  {{/each}}
</div>

<a class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored floating-bottom-right-button" href="/dashboard/apps/create">
  <i class="material-icons">add</i>
</a>
