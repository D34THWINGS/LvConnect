<!DOCTYPE html>
<html>
<head>
  <title>{{pageTitle}} - LvConnect</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Material Design Lite -->
  <link rel="stylesheet" href="/assets/material-icons.css">
  <link rel="stylesheet" href="/assets/material.blue-light_blue.min.css"/>
  <script defer async src="/assets/material.min.js"></script>

  <!-- LvConnect -->
  <link rel="stylesheet" href="/oauth/assets/css/oauth.css">
</head>
<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title">LvConnect</span>
      <div class="mdl-layout-spacer"></div>
      {{#if user}}
        <div>
          <span class="oauth-header-name">{{user.firstName}} {{user.lastName}}</span>
          <img class="oauth-header-avatar" src="https://www.gravatar.com/avatar/{{hash}}" alt="Avatar" id="profile-button">
          <div class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="profile-button">
            <a class="mdl-menu__item" href="{{logoutUrl}}">Logout</a>
          </div>
        </div>
      {{/if}}
    </div>
  </header>
  <main class="mdl-layout__content oauth-layout">
    <div class="oauth-container">
      {{{content}}}
    </div>
  </main>
</div>
</body>
</html>
